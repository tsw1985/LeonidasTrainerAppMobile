<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mosaicbackground"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.gabrielglez.leonidastraining.TrainerContentActivity" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:orientation="vertical" >
        
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginBottom="20dp"
             android:background="#0583F9"
             android:orientation="horizontal" >
            
            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_launcher" />

            <TextView
                android:id="@+id/title_trainer_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:text="Text"
                android:textColor="#FFFFFF"
                android:textSize="25sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:background="#64c6ff"
            android:orientation="vertical" >

            <Chronometer
                android:id="@+id/trainer_chronometer"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical|center_horizontal"
                android:textColor="#FFFFFF" />

        </LinearLayout>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal" >
            
             <LinearLayout
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginBottom="5dp"
                 android:layout_weight="1"
                 android:background="#64c6ff"
                 android:gravity="center_horizontal"
                 android:orientation="horizontal" >
	
	            <Button
	                android:id="@+id/start_cron_button"
	                style="@style/ButtonText"
	                android:layout_width="wrap_content"
	                android:layout_height="40dp"
	                android:layout_gravity="center_vertical"
	                android:background="@drawable/bluebutton"
	                android:shadowColor="#A8A8A8"
	                android:shadowDx="0"
	                android:shadowDy="0"
	                android:shadowRadius="5"
	                android:text="Start"
	                android:textSize="13sp" />
	
	            <Button
	                android:id="@+id/stop_cron_button"
	                style="@style/ButtonText"
	                android:layout_width="wrap_content"
	                android:layout_height="40dp"
	                android:layout_gravity="center_vertical"
	                android:background="@drawable/bluebutton"
	                android:shadowColor="#A8A8A8"
	                android:shadowDx="0"
	                android:shadowDy="0"
	                android:shadowRadius="5"
	                android:text="Stop"
	                android:textSize="13sp" />
            
            </LinearLayout>

        </LinearLayout>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:background="#64c6ff" >

            <TextView
                android:id="@+id/textView2"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="#64c6ff"
                android:padding="10dip"
                android:text="@string/title_select_day_in_trainer"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

            <Spinner
                android:id="@+id/day_trainer_spinner"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:background="#64c6ff"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />
            
            
            <ImageView
                android:id="@+id/day_row_down_image_view"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/rowdown" />
            
            
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:background="#64c6ff" >

            <CheckBox
                android:id="@+id/body_place_checkBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="#64c6ff"
                android:padding="10dip"
                android:text="@string/title_select_body_place_in_trainer"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

            <Spinner
                android:id="@+id/body_place_trainer_spinner"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:background="#64c6ff"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />
            
            <ImageView
                android:id="@+id/body_place_image_view"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/rowdown" />
            
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:background="#c5eaff"
            android:orientation="vertical"
            android:padding="3dip" >

            <ListView
                android:id="@+id/exercises_in_trainer_list_listview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#64c6ff" >

            </ListView>

        </LinearLayout>
        
        
        
        
        
        
        
        
        
    </LinearLayout>

</RelativeLayout>
